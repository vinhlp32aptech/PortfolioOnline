@model Portfolio5.Models.Follow
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<br />
<br />
<br />
<br />
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">


                <form method="post" asp-action="edit" asp-controller="follow" enctype="multipart/form-data">

                    <div class="form-group">
                        <label for="Id Follow">IdFollow</label>
                        <input type="text" asp-for="IdFollow" class="form-control" id="IdFollow" placeholder="Id Follow" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Id Account">IdAcc</label>
                        <input type="text" asp-for="IdAcc" class="form-control" id="Id Account" placeholder="Id Account" />
                    </div>
                    <div class="form-group">
                        <label for="IdFollower">IdFollower</label>
                        <input type="text" asp-for="IdFollower" class="form-control" id="IdFollower" placeholder="IdFollower" />
                    </div>
                    <div class="form-group">
                        <label for="NumOfFollow">Num Of Follow</label>
                        <input type="text" asp-for="NumOfFollow" class="form-control" id="NumOfFollow" placeholder="Num Of Follow" />
                    </div>
                    <div class="modal-footer">
                        <input type="hidden" asp-for="IdFollow" />
                        <input type="submit" value="Edit" class="btn btn-warning" id="btnEdit" />

                    </div>
                </form>


            </div>

        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</div>