<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Inbox</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="IdHashtag">#</label>
                        <input type="text" class="form-control" id="IdHashtag" placeholder="ID" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="NameHashtag">NameHashtag</label>
                        <input type="text" class="form-control" id="NameHashtag" placeholder="NameHashtag" />
                    </div>


                    <div class="form-group">
                        <label for="Status">Status</label>
                        <input type="text" class="form-control" id="Status" placeholder="Status" />
                    </div>
                    

                    <div class="form-group">
                        <label>Chọn menus cha</label>
                        <select class="form-control">
                            <option value="0">Chọn danh mục cha</option>

                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                <button type="button" class="btn btn-primary" id="btnEDit" onclick="return Edit();">Edit</button>
                @*<button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>*@
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>







