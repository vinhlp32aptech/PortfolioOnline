@model Portfolio5.Models.ContentPage
@{ ViewData["Title"] = "ContentPage";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }
<br />
<br />
<br />
<div style="min-height: 1665.6px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Content page Manager</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item active"></li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
  

        <!-- Default box -->
 
                <h3 class="card-title">Content page</h3>

       
                
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>IdContentPage</th>
                                <th>NamePage</th>
                                <th>Datecreated</th>
                                <th>Dateupdated</th>

                                <th style="width: 10%">
                                    <button type="button" class="btn btn-success " data-toggle="modal" data-target="#contentPage" onclick="clearTextBox();"><i class="fas fa-plus">ADD</i></button>
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var contentPage in ViewBag.contentPages)
                            {
                                <tr>
                                    <td>@contentPage.IdContentPage</td>
                                    <td>@contentPage.NamePage</td>
                                    <td>@contentPage.Datecreated</td>
                                    <td>@contentPage.Dateupdated</td>

                                    <td>

                                        <a type="button" class="btn btn-success" asp-controller="page" asp-action="UpdateContentPage" asp-route-id="@contentPage.IdContentPage"><i class="fas fa-edit"></i></a>
                                        <a type="button" class="btn btn-danger" asp-controller="page" asp-action="DeleteContentPage" asp-route-id="@contentPage.IdContentPage" onclick="return confirm('Are you sure delete @contentPage.IdContentPage ? ')"><i class="far fa-trash-alt"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
         
            <!-- /.card-body -->



   
    <!-- /.content -->
</div>
<div class="modal fade" id="contentPage" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>

            </div>
            <form method="post" asp-action="addcontentpage" asp-controller="page" enctype="multipart/form-data" >
                    <div class="modal-body">

                        <div class="form-group">
                            <label for="IdView">id content page </label>
                            <input type="text" asp-for="IdContentPage" class="form-control" id="IdView" placeholder="Id View"  />
                        </div>
                        <div class="form-group">
                            <label for="IdView">name page </label>
                            <input type="text" asp-for="NamePage" class="form-control" id="IdView" placeholder="Id View"  />
                        </div>




                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
             </form>
        </div>
    </div>
</div>
