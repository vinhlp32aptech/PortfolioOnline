<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Views Network</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="IdView">Id View</label>
                        <input type="text" class="form-control" id="IdView" placeholder="Id View" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="IdAccount">Id Account</label>
                        <input type="text" class="form-control" id="IdAccount" placeholder="Id Account" disabled="disabled" />
                    </div>

                    <div class="form-group">
                        <label for="NumOfView">Num Of View</label>
                        <input type="text" class="form-control" id="NumOfView" placeholder="Num Of View" />
                    </div>

                    <div class="form-group">
                        <label>Chọn Views cha</label>
                        <select class="form-control">
                            <option value="0">Chọn danh mục cha</option>

                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                <button type="button" class="btn btn-primary" id="btnEDit" onclick="return Edit();">Edit</button>
                @*<button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>*@
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
