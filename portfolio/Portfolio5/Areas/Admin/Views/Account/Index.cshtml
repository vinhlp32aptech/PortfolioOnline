@model Portfolio5.Models.Account

@{
    ViewData["Title"] = "Account";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />
<div class="container">
    <h2>Account</h2>
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();"><i class="fas fa-plus">ADD</i></button>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id Account</th>
                <th>Username</th>
                <th>Email</th>
                <th>DateCreated</th>
                <th>DateUpdated</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in ViewBag.accounts)
            {
                <tr>
                    <td>@account.IdAcc</td>
                    <td>@account.Username</td>
                    <td>@account.Email</td>
                    <td>@account.Datecreated</td>
                    <td>@account.Dateupdated</td>
                    <td>
                        <a type="button" class="btn btn-danger" asp-controller="account" asp-action="delete" asp-route-id="@account.IdAcc" onclick="return confirm('Are you sure?')"><i class="far fa-trash-alt"></i></a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Inbox</h4>
            </div>
            <div class="modal-body">
                <form asp-controller="account" asp-action="add" method="post">

                    <div class="form-group">
                        <label for="Name">Username</label>
                        <input type="text" class="form-control" asp-for="Username" id="Username" placeholder="Username" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Password</label>
                        <input type="password" class="form-control" asp-for="Pass" id="Password" placeholder="Password" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Email</label>
                        <input type="text" class="form-control" asp-for="Email" id="Email" placeholder="Email" />
                    </div>

                    <div class="form-group">
                        <label>Choose Role</label>
                        <select class="form-control" id="selectRole" name="selectRole">
                            @foreach (var role in ViewBag.listRoles)
                            {
                            <option value="@role.NameRole">@role.NameRole</option>
                            }

                        </select>
                    </div>
                    <input type="submit" class="btn btn-primary"  value="ADD" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                <button type="button" class="btn btn-primary" id="btnEDit" onclick="return Edit();">Edit</button>-->
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

