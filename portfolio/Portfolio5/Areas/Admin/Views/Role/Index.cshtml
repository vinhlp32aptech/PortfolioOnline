@model Portfolio5.Models.Role
@{
    ViewData["Title"] = "Role";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<br />
<div class="container">
    <h2>Role</h2>
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();"><i class="fas fa-plus">ADD</i></button>
    <form action="/" method="post">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id Role</th>
                    <th>Name Role</th>
                    <th>Description</th>
                    <th>Date Create</th>
                    <th>Date update</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var role in ViewBag.roles)
                {
                    <tr>
                        <td>@role.IdRole</td>
                        <td>@role.NameRole</td>
                        <td>@role.Desc</td>
                        <td>@role.Datecreated</td>
                        <td>@role.Dateupdated</td>
                        <td>
                            
                            <a type="button" class="btn btn-success" asp-controller="role" asp-action="update" asp-route-id="@role.IdRole"><i class="fas fa-edit"></i></a>
                            <a type="button" class="btn btn-danger" asp-controller="role" asp-action="delete" asp-route-id="@role.IdRole" onclick="return confirm('Are you sure?')"><i class="far fa-trash-alt"></i></a>

                        </td>
                    </tr>

                }


            </tbody>
        </table>
    </form>

</div>


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Inbox</h4>
            </div>
            <div class="modal-body">
                <form asp-controller="role" asp-action="add" method="post">

                    <div class="form-group">
                        <label for="NameRole">NameRole</label>
                        <input type="text" class="form-control" id="NameRole" placeholder="Role" asp-for="NameRole" />
                        <td><span asp-validation-for="NameRole"></span></td>

                    </div>


                    <div class="form-group">
                        <label for="descRole">Description</label>
                        <input type="text" class="form-control" id="descRole" placeholder="Description" asp-for="Desc" />
                        <td><span asp-validation-for="Desc"></span></td>

                    </div>

                    <input type="submit" value="ADD" class="btn btn-primary"/>
                </form>
            </div>
           
        </div>
    </div>
</div>

